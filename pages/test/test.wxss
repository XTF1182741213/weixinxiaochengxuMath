.container{
  padding: 100rpx 0;
  background-color: #F5F5F5;
}

#describes{
  margin-top:15rpx;
}

.times{
  position: relative;
  left: 240px;
  font-size:18px;
  color:blue;
}

.warp{
  height: 100%;
  width: 100%; 
}

page{
  height: 100%;
  width: 100%;
  background-color: #F5F5F5;
}

.outer{
  position: absolute;
  left: 0rpx;
  top: 10rpx;
  height: 100%;
  width: 100%;
}

.text-question{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bolder;
}

.text-word{
  display: flex;
  align-items: center;
}

.text1{
  font-size: 65rpx;
}

#describe{
  margin: 1rem;
  width: 100%;
}

.img-cancel{
  width: 55rpx;
  height: 55rpx;
  margin: 20rpx;
}
.img-again{
  width: 55rpx;
  height: 55rpx;
  margin: 20rpx;
}

#answer{
  margin-bottom: 2rpx;
}

radio{
  margin: 10px;
  width: 100%
}

radio .wx-radio-input.wx-radio-input-checked{
  border: none;
  background: red;
}

radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: rgb(67, 82, 163); 
  transform: translate(-50%,-50%) scale(1.3);
  -webkit-transform: translate(-50%,-50%) scale(1.3)
}

.item{
  border-radius: 10px;
  width: 100%;
  min-height: 100rpx;
  max-height: 100rpx;
  display: flex;
  align-items: center;
  white-space: nowrap;
  background-color: #FFFFFF;
}

.item-ui{
  width:100%;
  height:125rpx;
  background-color: #FFFFFF;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
}

.item:active{
  background: lightblue;
  margin:20px;
  border-radius: 15px;
  font-weight: bold;
  color: rgba(67, 82, 163, 0.9);
}

#confirm:active{
  background: lightblue
}

.img{
  width: 715rpx;
}

.question-img{
  width:100%;
  margin-top:20rpx;
  background-color: #FFFFFF;
}

.question-text{
  margin-top:20rpx;
  margin-left:10rpx; 
  margin-right:10rpx;
  line-height: 80rpx;
  background-color: #FFFFFF;
}




