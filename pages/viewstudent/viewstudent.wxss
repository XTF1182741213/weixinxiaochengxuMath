.container{
  padding: 50rpx 0;
}

page{
  width: 100%;
  height: auto;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 500rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 60rpx; 
  text-align: center;
   border-radius: 5px; 
   padding: 20rpx;
} 
.user-motto{
  font-size: 40rpx;
  font-family: MicroSoft Yahei;
  font-weight: bold;
  line-height: 60rpx;
}